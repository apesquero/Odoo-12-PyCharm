<?xml version="1.0"?>
<odoo>
    <record id="res_company_form" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_address_format']" position="after">
                <label for="default_signal"/>
                <div>
                    <field name="default_signal" class="oe_inline"/>
                    <span class="o_form_label oe_inline">%</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
