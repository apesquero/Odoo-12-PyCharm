<?xml version="1.0"?>
<odoo>
    <template id="report_saleorder_document_manzano" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='page']/h2" position="replace">
            <h2>
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state not in ['draft','sent']" class="title text-uppercase">Order</span>
                    <span t-if="doc.state in ['draft','sent']" class="title text-uppercase">Quotation</span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span class="title text-uppercase">Pro-Forma Invoice</span>
                </t>
            </h2>
        </xpath>

        <xpath expr="//div[@id='informations']" position="replace">
            <div class="container col-12" id="informations">
                <div class="row">
                    <div id="column_left" class="col-7">
                    <div class="row">
                        <div class="col-3 text-right">
                            <strong>Number:</strong>
                        </div>
                        <div class="col-9 text-left">
                            <span t-field="doc.name"/>
                        </div>
                    </div>

                    <div t-if="doc.date_order" class="row">
                        <div class="col-3 text-right">
                            <strong>Date:</strong>
                        </div>
                        <div class="col-9 text-left">
                            <span t-field="doc.date_order"/>
                        </div>
                    </div>

                    <div t-if="doc.client_order_ref" class="row">
                        <div class="col-3 text-right">
                            <strong>Your Reference:</strong>
                        </div>
                        <div class="col-9 text-left">
                            <span t-field="doc.client_order_ref"/>
                        </div>
                    </div>
                </div>

                    <div id="column_right" class="col-5">
                    <div t-if="doc.user_id.name" class="row">
                        <div class="col-3 text-right">
                            <strong>Salesperson:</strong>
                        </div>
                        <div class="col-9 text-left">
                            <span t-field="doc.user_id"/>
                        </div>
                    </div>
                    <div t-if="doc.user_id.phone or doc.user_id.mobile" class="row">
                        <div class="col-3 text-right">
                            <strong>Phone:</strong>
                        </div>
                        <div class="col-9 text-left">
                            <div t-if="doc.user_id.phone">
                                <span class="fa fa-phone"/>
                                <span t-field="doc.user_id.phone"/>
                            </div>
                            <div t-if="doc.user_id.mobile">
                                <span class="fa fa-mobile"/>
                                <span t-field="doc.user_id.mobile"/>
                            </div>
                        </div>

                    </div>
                </div>

                </div>

            </div>

            <div class="container col-12" id="informations_partner">
                <div class="row">
                    <div id="column_left" class="col-7">
                        <div class="row">
                            <div class="col-3 text-right">
                                <strong>Partner:</strong>
                            </div>
                            <div class="col-9 text-left">
                                <p class="name" t-field="doc.partner_id.name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3 text-right" t-if="doc.partner_id.vat">
                                <strong>VAT:</strong>
                            </div>
                            <div class="col-9 text-left">
                                <span t-field="doc.partner_id.vat"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3 text-right">
                                <strong>Address:</strong>
                            </div>
                            <div class="col-9 text-left">
                                <div>
                                    <span t-field="doc.partner_id.street"/>
                                    <span>-</span>
                                    <span t-field="doc.partner_id.doorway"/>
                                    <span t-if="doc.partner_id.doorway">-</span>
                                    <span t-field="doc.partner_id.floor"/>
                                    <span t-field="doc.partner_id.letter"/>
                                    <span t-if="doc.partner_id.number_door">-</span>
                                    <span t-field="doc.partner_id.number_door"/>
                                    <span t-if="doc.partner_id.number_door" class="fa fa-bell"/>
                                </div>
                                <div>
                                    <span t-field="doc.partner_id.zip"/>
                                    <span t-field="doc.partner_id.city"/>
                                    <span t-field="doc.partner_id.state_id"/>
                                    <span t-field="doc.partner_id.country_id"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="column_right" class="col-5">
                        <div class="row">
                            <div class="col-3 text-right">
                                <strong>Phone:</strong>
                            </div>
                            <div class="col-9 text-left">
                                <div t-field="doc.partner_id"
                                     t-options='{"widget": "contact", "fields": ["phone", "mobile", "mobile2", "fax"], "no_marker": true, "phone_icons": true}'/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3 text-right">
                                <strong>E-mail:</strong>
                            </div>
                            <div class="col-9 text-left">
                                <p class="email" t-field="doc.partner_id.email"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>

    </template>
</odoo>