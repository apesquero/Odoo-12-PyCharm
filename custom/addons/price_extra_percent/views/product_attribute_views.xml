<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_attribute_value_view_tree_type" model="ir.ui.view">
        <field name="model">product.template.attribute.value</field>
        <field name="inherit_id" ref="product.product_template_attribute_value_view_tree"/>
        <field name="arch" type="xml">
            <field name="price_extra" position="before">
                <field name="price_extra_type"/>
                <field name="percentage"/>
            </field>
        </field>
    </record>

    <record id="product_template_attribute_value_view_form_type" model="ir.ui.view">
        <field name="model">product.template.attribute.value</field>
        <field name="inherit_id" ref="product.product_template_attribute_value_view_form"/>
        <field name="arch" type="xml">
            <field name="price_extra" position="before">
                <field name="price_extra_type"/>
                <field name="percentage" class="oe_inline"/>
            </field>
        </field>
    </record>

</odoo>
